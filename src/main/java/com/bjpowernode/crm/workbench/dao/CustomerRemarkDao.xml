<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.CustomerRemarkDao">
	<insert id="save">
        insert into tbl_customer_remark(
            id,
            noteContent,
            createBy,
            createTime,
            editFlag,
            customerId
        )values (
            #{id},
            #{noteContent},
            #{createBy},
            #{createTime},
            #{editFlag},
            #{customerId}
        )
    </insert>
  	<select id="showRemarkList" resultType="CustomerRemark">
        select * from tbl_customer_remark where customerId=#{customerId}
    </select>
    <update id="updateRemark">
        update tbl_customer_remark set noteContent=#{noteContent} where id=#{id}
    </update>
    <delete id="deleteRemark">
        delete from tbl_customer_remark where id=#{id}
    </delete>
</mapper>

































